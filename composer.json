{
    "name": "bwgdev/edd-role-manager",
    "description": "WordPress plugin that manages user roles based on EDD subscription status",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Boston Web Group",
            "homepage": "https://bostonwebgroup.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "yahnis-elsts/plugin-update-checker": "^5.6"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^3.0",
        "szepeviktor/phpstan-wordpress": "^1.3"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "vendor-dir": "plugin/vendor"
    },
    "scripts": {
        "phpcs": "phpcs --standard=WordPress plugin/",
        "phpstan": "phpstan analyse -c dev-tools/phpstan.neon",
        "analyze": "./dev-tools/analyze.sh"
    }
}
